<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{{#add}}Create new Employee{{/add}}{{^add}}Edit Employee{{/add}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" >
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script></head>
<body class="mx-2 bg-light bg-gradient">
{{>header}}
<h1> {{#add}}Create new Employee:{{/add}}{{^add}}Edit Employee:{{/add}}</h1>
<a class="btn btn-outline-dark" href="/employee/list-all">Back to Employee List</a>
<br/><br/>
{{#employee}}
    <form action="{{#add}}/employee/add-employee{{/add}}{{^add}}/employee/update-employee/{{id}}{{/add}}" name="employee" method="POST">
        <table class="table table-dark table-striped">
            {{#employeeNumber}}
                <tr>
                    <td>ID</td>
                    <td>:</td>
                    <td>{{employeeNumber}}</td>
                </tr>
            {{/employeeNumber}}
            <tr>
                <td>Last Name</td>
                <td>:</td>
                <td><input type="text" name="lastName" value="{{#lastName}}{{lastName}}{{/lastName}}" /></td>
            </tr>
            <tr>
                <td>First Name</td>
                <td>:</td>
                <td><input type="text" name="firstName" value="{{#firstName}}{{firstName}}{{/firstName}}" /></td>
            </tr>
            <tr>
                <td>Email</td>
                <td>:</td>
                <td><input type="text" name="email" value="{{#email}}{{email}}{{/email}}" /></td>
            </tr>
            <tr>
                <td>Office Code</td>
                <td>:</td>
                <td><input type="text" name="officeCode" value="{{#officeCode}}{{officeCode}}{{/officeCode}}" /></td>
            </tr>
            <tr>
                <td>Job Title</td>
                <td>:</td>
                <td><input type="text" name="jobTitle" value="{{#jobTitle}}{{jobTitle}}{{/jobTitle}}" /></td>
            </tr>
        </table>
        <input class="btn btn-outline-primary" type="submit" value="{{#add}}Create{{/add}}{{^add}}Update{{/add}}" />
    </form>
{{/employee}}

<br/>
<!-- Check if errorMessage is not null and not empty -->
<div class="error">{{#errorMessage}}{{errorMessage}}{{/errorMessage}}</div>
{{>footer}}
</body>
</html>
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8" />
    <title>User Details</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css"/>
</head>
<body>
<h1>View Employee</h1>
<a href="/employee/list-all">Back to Employee List</a>
<br/><br/>
{{#employee}}
    <table border="0">
        <tr>
            <td>Last Name</td>
            <td>:</td>
            <td>{{lastName}}</td>
        </tr>
        <tr>
            <td>First Name</td>
            <td>:</td>
            <td>{{firstName}}</td>
        </tr>
        <tr>
            <td>Email</td>
            <td>:</td>
            <td>{{email}}</td>
        </tr>
        <tr>
            <td>Office Code</td>
            <td>:</td>
            <td>{{officeCode}}</td>
        </tr>
        <tr>
            <td>Job</td>
            <td>:</td>
            <td>{{jobTitle}}</td>
        </tr>
    </table>
    <br/><br/>
    {{#allowDelete}}
        <form action="/employee/delete-employee/{{employeeNumber}}" method="POST">
            Delete this user? <input type="submit" value="Yes" />
        </form>
    {{/allowDelete}}
    {{^allowDelete}}
        <div>
            <a href="/employee/update-employee/{{employeeNumber}}">Edit</a> |
            <a href="/employee/delete-employee/{{employeeNumber}}">Delete</a>
        </div>
    {{/allowDelete}}
{{/employee}}
{{#errorMessage}}
    <div class="error">{{errorMessage}}</div>
{{/errorMessage}}
{{>footer}}
</body>
</html>
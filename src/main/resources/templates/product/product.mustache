<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8" />
    <title>User Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" >
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script></head>
<body class="mx-2 bg-light bg-gradient">
{{>header}}
<h1>View Product</h1>
<a class="btn btn-outline-dark" href="/product/list-all">Back to Product List</a>
<br/><br/>
{{#product}}
    <table class="table table-dark table-striped">
        <tr>
            <td>Product Name</td>
            <td>:</td>
            <td>{{productName}}</td>
        </tr>
        <tr>
            <td>Product Line</td>
            <td>:</td>
            <td>{{productLine}}</td>
        </tr>
        <tr>
            <td>Product Vendor</td>
            <td>:</td>
            <td>{{productVendor}}</td>
        </tr>
        <tr>
            <td>Product Description</td>
            <td>:</td>
            <td>{{productDescription}}</td>
        </tr>
        <tr>
            <td>Quantity in Stock</td>
            <td>:</td>
            <td>{{quantityInStock}}</td>
        </tr>
        <tr>
            <td>Buy Price</td>
            <td>:</td>
            <td>{{buyPrice}}</td>
        </tr>

    </table>
    <br/><br/>
    {{#allowDelete}}
        <form action="/product/delete-product/{{productCode}}" method="POST">
            Delete this user? <input type="submit" value="Yes" />
        </form>
    {{/allowDelete}}
    {{^allowDelete}}
        <div>
            <a class="btn btn-outline-dark" href="/product/update-product/{{productCode}}">Edit</a> |
            <a class="btn btn-outline-danger" href="/product/delete-product/{{productCode}}">Delete</a>
        </div>
    {{/allowDelete}}
{{/product}}
{{#errorMessage}}
    <div class="error">{{errorMessage}}</div>
{{/errorMessage}}
{{>footer}}
</body>
</html>
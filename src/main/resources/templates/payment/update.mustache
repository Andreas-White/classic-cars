<!DOCTYPE HTML>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{{#add}}Create new Payment{{/add}}{{^add}}Edit Payment{{/add}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet" >
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script></head>
<body class="mx-2 bg-light bg-gradient">
{{>header}}
<h1>{{#add}}Create new Payment:{{/add}}{{^add}}Edit Payment:{{/add}}</h1>
<a class="btn btn-outline-dark" href="/payment/list-all">Back to Payment List</a>
<br/><br/>
{{#payment}}
    <form action="{{#add}}/payment/add-payment{{/add}}{{^add}}/payment/update-payment/{{id}}{{/add}}" name="payment" method="POST">
        <table class="table table-dark table-striped">
            {{#checkNumber}}
                <tr>
                    <td>ID</td>
                    <td>:</td>
                    <td>{{checkNumber}}</td>
                </tr>
            {{/checkNumber}}
            <tr>
                <td>Customer Number</td>
                <td>:</td>
                <td><input type="text" name="customerNumber" value="{{#customerNumber}}{{customerNumber}}{{/customerNumber}}" /></td>
            </tr>
            <tr>
                <td>Payment Date</td>
                <td>:</td>
                <td><input type="text" name="paymentDate" value="{{#paymentDate}}{{paymentDate}}{{/paymentDate}}" /></td>
            </tr>
            <tr>
                <td>Amount</td>
                <td>:</td>
                <td><input type="text" name="amount" value="{{#amount}}{{amount}}{{/amount}}" /></td>
            </tr>
        </table>
        <input class="btn btn-outline-primary" type="submit" value="{{#add}}Create{{/add}}{{^add}}Update{{/add}}" />
    </form>
{{/payment}}

<br/>
<!-- Check if errorMessage is not null and not empty -->
<div class="error">{{#errorMessage}}{{errorMessage}}{{/errorMessage}}</div>
{{>footer}}
</body>
</html>